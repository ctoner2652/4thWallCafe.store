@model List<UserViewModel>

@{
    ViewData["Title"] = "User Management";
    Layout = "_ManagerLayout";
}

<h2>User Management</h2>
<a asp-action="Register" asp-controller="Auth" class="btn btn-primary mb-3">Create New User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Is Manager</th>
            <th>Is Accountant</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    <input type="checkbox" checked="@user.IsManager" disabled />
                </td>
                <td>
                    <input type="checkbox" checked="@user.IsAccountant" disabled />
                </td>
                <td>
                    <a asp-action="EditUser" asp-controller="User" asp-route-username="@user.UserName" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
