@{
	ViewData["Title"] = "Welcome to 4th Wall Café!";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - _4ThWallCafe.MVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
	<link rel="stylesheet" href="~/_4ThWallCafe.MVC.styles.css" asp-append-version="true">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>☕</text></svg>">
	<style>
		.hero-section {
			background: url('@Url.Content("~/Images/herobg.jpg")') no-repeat center center fixed;
			background-size: cover;
			height: 100vh;
			width: 100vw;
			display: flex;
			flex-direction: column;
			text-align: center;
			position: relative;
			overflow: hidden;
			padding-top: 80px;
			margin: 0;
		}

		.navbar {
			background-color: transparent;
			position: absolute;
			top: 0;
			width: 100%;
			z-index: 10;
			transition: background-color 0.3s ease;
			box-shadow: none;
		}

		.about-section h2,
		.about-section h3 {
			font-family: 'Segoe UI', sans-serif;
		}

		.about-section ul li {
			font-size: 1.1rem;
			color: #3d2b1f;
		}
	</style>
</head>

<body>
	<nav class="navbar navbar-dark navbar-expand-lg  fixed-top">
		<div class="container">
			<a class="navbar-brand fw-bold" asp-action="Index" asp-controller="Home">☕ 4th Wall Café</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" asp-action="GetMenu" asp-controller="Menu">Menu</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-action="GetOrder" asp-controller="Menu">Order Here</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-action="ViewCart" asp-controller="Cart">🛒 View Cart</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-action="Login" asp-controller="Auth">Login </a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	@if (TempData["Message"] != null)
	{
		<div class="container mt-5 pt-4">
			<div class="alert alert-info alert-dismissible fade show text-center" role="alert">
				<strong></strong> @TempData["Message"]
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		</div>
	}
	<main role="main" class="pb-3">
		<div class="hero-section d-flex flex-column align-items-center justify-content-center text-white">
			<div class="text-center">
				<h1 class="fw-bold">☕ Welcome to 4th Wall Café</h1>
				<p class="lead">A cozy café experience, perfect for coffee lovers and foodies alike.</p>
				<a asp-action="GetMenu" asp-controller="Menu" class="btn btn-light btn-lg fw-bold mt-3">📜 View Our Menu</a>
			</div>
		</div>
		<section class="about-section py-5 text-dark" style="background-color: #fff8ee;">
			<div class="container">
				<div class="text-center mb-5">
					<div class="divider mx-auto mb-3" style="height: 2px; width: 40px; background-color: #c47e35;"></div>
					<h6 class="text-uppercase fw-bold" style="color: #c47e35;">About Us</h6>
					<h2 class="fw-bold display-5" style="color: #3d2b1f;">Serving Since 1950</h2>
				</div>
				<div class="row align-items-center">
					<div class="col-md-5">
						<h3 class="fw-bold" style="color: #3d2b1f;">Our Story</h3>
						<p class="mt-3 text-muted">
							4th Wall Café was born from a simple idea — to create a space where good coffee and good conversation come together.
							What started as a passion project between friends quickly grew into a cozy neighborhood staple.
						</p>
						<p class="text-secondary">
							We believe in brewing with intention — from ethically sourced beans to homemade baked goods made fresh each morning.
							Every corner of our café is designed to make you feel at home, whether you're here to work, meet a friend, or escape the noise for a moment of calm.
						</p>
						<a href="#" class="btn btn-dark mt-3 px-4 py-2 fw-bold">Learn More</a>
					</div>

					<div class="col-md-2 text-center d-none d-md-block">
						<img src="~/Images/coffeesplash.png" alt="Coffee Splash" class="img-fluid" style="max-height: 300px;">
					</div>

					<div class="col-md-5">
						<h3 class="fw-bold" style="color: #3d2b1f;">Our Vision</h3>
						<p class="mt-3 text-muted">
							We’re more than just a café — we’re a place to connect, reflect, and recharge. As we continue to grow, we’re committed to keeping the experience personal and the coffee unforgettable.
						</p>
						<ul class="list-unstyled mt-4">
							<li class="mb-2"><span style="color: #c47e35;">✔</span> Serve high-quality, ethically sourced coffee</li>
							<li class="mb-2"><span style="color: #c47e35;">✔</span> Foster a welcoming and inclusive environment</li>
							<li class="mb-2"><span style="color: #c47e35;">✔</span> Support local artists, makers, and community events</li>
						</ul>
						<a href="#" class="btn mt-3 px-4 py-2 fw-bold" style="background-color: #f4c084; color: #3d2b1f;">Learn More</a>
					</div>
				</div>
			</div>
		</section>

	</main>
	<footer class="footer text-white pt-4 pb-3" style="font-size: 0.9rem;">
		<div class="container">
			<div class="row gy-4">

				<div class="col-md-3 col-sm-6">
					<h6 class="text-uppercase fw-bold mb-3">Get In Touch</h6>
					<p class="mb-1"><i class="bi bi-geo-alt-fill me-2"></i>123 Brew Street, Bedford, OH</p>
					<p class="mb-1"><i class="bi bi-telephone-fill me-2"></i>(440) 555-1234</p>
					<p><i class="bi bi-envelope-fill me-2"></i>contact@4thwallcafe.com</p>
				</div>

				<div class="col-md-3 col-sm-6">
					<h6 class="text-uppercase fw-bold mb-3">Follow Us</h6>
					<p class="mb-2">Stay connected over a warm cup of something good.</p>
					<div class="d-flex gap-2">
						<a href="#" class="btn btn-outline-light btn-sm rounded-0 px-2 py-1"><i class="bi bi-twitter"></i></a>
						<a href="#" class="btn btn-outline-light btn-sm rounded-0 px-2 py-1"><i class="bi bi-facebook"></i></a>
						<a href="#" class="btn btn-outline-light btn-sm rounded-0 px-2 py-1"><i class="bi bi-linkedin"></i></a>
						<a href="#" class="btn btn-outline-light btn-sm rounded-0 px-2 py-1"><i class="bi bi-instagram"></i></a>
					</div>
				</div>

				<div class="col-md-3 col-sm-6">
					<h6 class="text-uppercase fw-bold mb-3">Open Hours</h6>
					<p class="mb-1"><strong>Mon – Fri:</strong> 7:00 AM – 8:00 PM</p>
					<p><strong>Sat – Sun:</strong> 8:00 AM – 6:00 PM</p>
				</div>

				<div class="col-md-3 col-sm-6">
					<h6 class="text-uppercase fw-bold mb-3">Newsletter</h6>
					<p class="mb-2">Get updates, special offers & seasonal drink drops.</p>
					<form class="d-flex flex-nowrap align-items-center" style="max-width: 100%;">
						<input type="email" class="form-control rounded-2 me-2" placeholder="Your Email"
							   style="height: 36px; font-size: 0.85rem; padding: 4px 8px; max-width: 180px;">
						<button class="btn rounded-2 fw-bold text-white"
								style="background-color: #c47e35; height: 36px; font-size: 0.85rem; padding: 4px 12px;">
							Sign Up
						</button>
					</form>
				</div>
			</div>

			<hr class="border-light my-3" />

			<div class="text-center small mt-2" style="font-size: 0.8rem;">
				&copy; 2025 <strong>4th Wall Café</strong>. All rights reserved. Designed with ☕ by Colby.
			</div>
		</div>
	</footer>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
